<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>


    </style>

    <!-- Grid Navigation Fragment CardView Text Style -->
    <style name="GridNavCardViewTextStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/cardNav_text_size</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/bottom_nav_button_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
    </style>

</resources>

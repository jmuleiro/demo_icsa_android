<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:paddingVertical="15dp"
    android:paddingHorizontal="20dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/customview_approval_item_text_container_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Placeholder title"
            android:id="@+id/customview_approval_item_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Placeholder subtitle"
            android:id="@+id/customview_approval_item_subtitle"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/arrow_right"
        android:tint="@color/cardview_dark_background"
         />

</LinearLayout>
